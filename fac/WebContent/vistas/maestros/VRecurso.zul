<zk>
	<window width="40em" closable="false" id="wdwRecurso"
		apply="controlador.maestros.CRecurso">
		<caption label="Recurso"
			style="color:white; font-size: 16px; font-weight:bold; " />
		<div>
			<grid width="100%">
				<columns visible="false">
					<column label="" width="25%" />
					<column label="" width="45%" />
					<column label="" width="30%" />
				</columns>
				<rows>
					<row>
						<hbox>
							<label class="etiqueta" value="Decripcion: " />
							<space />
							<label value="*" style="font-weight:bold;color:red" />
						</hbox>
						<textbox id="txtDescripcionRecurso" hflex="1" maxlength="50"
							tooltiptext="Ingrese la descripcion del recurso" />
						<button id="btnBuscarRecursos" label="Buscar" tooltiptext="Catalogo Recursos"
							image="/public/imagenes/botones/buscar.png" />
					</row>
				</rows>
			</grid>
			<separator />
			<div id="botoneraRecurso" />
			<div id="DivCatalogoRecurso" />
		</div>
	</window>
</zk>
<zk>
	<style src="public/Estilo.css" />
	<zscript>
		String variable = execution.getParameter("respuesta");
		String
		a
		= "";
		if (variable == null)
		a = "INICIAR SESION";
		else
		a =
		execution.getParameter("respuesta");
	</zscript>
	<window title="" border="0" height="100%" contentStyle="overflow:auto">
		<borderlayout height="100%">
			<north height="6em">
				<div width="100%" height="100%" style="background:#500101">
					<hbox hflex="1">
						<vbox>
							<separator />
							<image src="/public/imagenes/generales/LogoDusa.png"
								height="4em" width="20em" />
						</vbox>
						<div align="center" width="35em">
							<separator />
							<separator />
							<separator />
							<separator />
							<hbox>
								<label style="font-size:30px;color:white;font-weight: bold"
									value="Formato de Actividades" />
							</hbox>
						</div>
					</hbox>
				</div>
			</north>
			<center border="none">
				<div align="center" height="100%" width="100%" style="background:#500101">
					<div align="right">
						<hbox >
							<image src="/public/imagenes/generales/1.png"
								height="7em" width="9em" />
							<image src="/public/imagenes/generales/2.png"
								height="7em" width="9em" />
							<image src="/public/imagenes/generales/3.png"
								height="7em" width="9em" />
							<image src="/public/imagenes/generales/4.png"
								height="7em" width="9em" />
						</hbox>
					</div>
					<hbox style="border: none" align="center" pack="center"
						height="75%" width="100%">
						<groupbox width="25em" height="50%" mold="3d">
							<caption label="${a}"
								style="color:white; font-size: 18px; font-weight:bold" />
							<separator></separator>
							<separator></separator>
							<hlayout width="100%">
								<h:form id="inicioSesion" action="j_spring_security_check"
									method="POST" xmlns:h="native">
									<hlayout width="100%">
										<label class="etiqueta" height="20px"
											style="font-size:18px; font-weight: bold" value="Nombre de Usuario :" />
										<textbox placeholder="Usuario" height="22px" id="log_usuario"
											name="j_username" hflex="1" />
									</hlayout>
									<separator />
									<separator />
									<separator />
									<hlayout width="100%">
										<label class="etiqueta" height="20px"
											style="font-size:18px; font-weight: bold" value="Contraseña :" />
										<textbox placeholder="Contraseña" height="22px" id="log_clave"
											hflex="1" type="password" name="j_password" />
									</hlayout>
									<separator />
									<separator />
									<separator />
									<div align="center">
										<button type="submit" class="btn-salir" label="Entrar"
											image="/public/imagenes/botones/entrar.png" />
									</div>
									<separator></separator>
									<separator></separator>
								</h:form>
							</hlayout>
						</groupbox>
					</hbox>
				</div>
			</center>
			<south vflex="2" border="0" height="4em" collapsible="false">
				<div width="100%" height="100%" style="background:#500101">
					<div align="center" sclass="footer">
						<separator />
						<label
							style="color:#DAD3D3; font-size: 14px; font-weight:bold;padding-center:35%; "
							value="© 2014 Elaborado por BIZAPPS,C.A. All Rights Reserved. Terms Privacy">
						</label>
					</div>
				</div>
			</south>
		</borderlayout>
	</window>
</zk>